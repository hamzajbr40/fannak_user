<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="EditText_Theme" parent="Widget.AppCompat.EditText">
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="ButtonTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/english_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_15</item>
    </style>
    <style name="LabelsTextAppearance" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16</item>
        <item name="fontFamily">@font/english_regular</item>
    </style>
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">#000</item>
        <item name="android:textSize">@dimen/_16</item>
        <item name="android:fontFamily">@font/english_medium</item>

    </style>
    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">@dimen/_16</item>
    <item name="android:textColor">@color/grey</item>
    <item name="textAllCaps">false</item>
    </style>
</resources>
