<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">
    <ImageView
        android:id="@+id/fannak_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/fannak_logo"
        android:layout_marginTop="46dp"
        android:layout_marginStart="@dimen/layout_start_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/login_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_label"
        android:textColor="@color/black"
        android:fontFamily="@font/english_headline_semibold"
        android:textSize="@dimen/_40"
        android:layout_marginTop="16dp"
        android:layout_marginStart="@dimen/layout_start_margin"
        app:layout_constraintTop_toBottomOf="@id/fannak_logo"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="@dimen/_16"
        android:textColor="@color/black"
        android:fontFamily="@font/english_regular"
        android:layout_marginTop="40dp"
        android:layout_marginStart="@dimen/layout_start_margin"
        app:layout_constraintTop_toBottomOf="@id/login_label"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/email_card"
        android:layout_width="0dp"
        android:layout_height="@dimen/edittext_height"
        app:cardBackgroundColor="@color/card_default_color"
        app:cardCornerRadius="@dimen/card_default_radius"
        app:layout_constraintTop_toBottomOf="@id/email_tv"
        android:layout_marginHorizontal="@dimen/edittext_horizontal_margin"
        android:layout_marginTop="@dimen/edittext_top_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textSize="@dimen/_16"
        android:textColor="@color/black"
        android:fontFamily="@font/english_regular"
        android:layout_marginTop="16dp"
        android:layout_marginStart="@dimen/layout_start_margin"
        app:layout_constraintTop_toBottomOf="@id/email_card"
        app:layout_constraintStart_toStartOf="parent"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/password_card"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittext_height"
            app:cardBackgroundColor="@color/card_default_color"
            app:cardCornerRadius="@dimen/card_default_radius"
            android:layout_marginTop="@dimen/edittext_top_margin"
            android:layout_marginHorizontal="@dimen/edittext_horizontal_margin"
            app:layout_constraintTop_toBottomOf="@id/password_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>