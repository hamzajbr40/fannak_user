<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.NoOrdersFragment">

    <ImageView
        android:id="@+id/paint_palette_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_paint_palette"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wow_such_empty"
        android:fontFamily="@font/english_bold"
        android:textSize="@dimen/_20"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/paint_palette_img"
        app:layout_constraintTop_toBottomOf="@id/paint_palette_img"
        app:layout_constraintEnd_toEndOf="@id/paint_palette_img"/>

</androidx.constraintlayout.widget.ConstraintLayout>